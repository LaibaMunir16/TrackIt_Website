@{
    ViewData["Title"] = "Expenses";
    Layout = "_Layout2";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body { background-color: #f8f9fa; min-height: 100vh; color: rgb(29, 43, 54); font-family: 'Segoe UI', sans-serif; }

    /* Dashboard-style heading */
    .page-header {
        text-align: center;
        margin-bottom: 1.5rem;
        padding-top: 0;
    }
    .page-header h2 {
        font-weight: 700;
        margin-bottom: 6px;
    }
    .page-header p {
        margin: 0;
        color: rgba(29,43,54,0.75);
    }

    /* ✅ FIX: Modal not hiding under fixed layout header */
    #addExpenseModal.modal {
        padding-top: 110px !important;
    }
    #addExpenseModal .modal-dialog {
        margin-top: 0 !important;
    }

    /* ✅ FIX: Offcanvas (eye history) not hiding under layout header */
    #historySidebar.offcanvas {
        top: 70px !important;                 /* starts after top layout */
        height: calc(100vh - 70px) !important;/* fill remaining screen */
    }
    @@media (max-width: 576px) {
        #addExpenseModal.modal { padding-top: 85px !important; }
        #historySidebar.offcanvas {
            top: 62px !important;
            height: calc(100vh - 62px) !important;
        }
    }

    /* ✅ Total summary (less bold amount) */
    .total-summary-card {
        background: white;
        border-left: 5px solid rgba(29, 43, 54, 0.85);
        padding: 18px 25px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        max-width: fit-content;
    }
    .total-summary-icon {
        background-color: rgb(29, 43, 54);
        color: #F5F5DC;
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
    }
    .total-summary-amount {
        font-size: 1.65rem;
        font-weight: 700;
        letter-spacing: 0.2px;
        color: rgba(29,43,54,0.92);
    }

    /* ✅ NEW: total + history button row */
    .summary-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        flex-wrap: wrap;
    }
    .btn-history {
        background: rgb(29, 43, 54);
        color: #F5F5DC;
        border: none;
        border-radius: 12px;
        padding: 12px 18px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 6px 16px rgba(0,0,0,0.10);
        transition: 0.2s ease;
        white-space: nowrap;
    }
    .btn-history:hover {
        transform: translateY(-1px);
        opacity: 0.95;
        color: #fff;
    }
    .btn-history i { font-size: 1.1rem; }

    /* ✅ Category cards - white + theme accent strip */
    .expense-container {
        display: flex;
        flex-wrap: wrap;
        gap: 18px;
        justify-content: flex-start;
    }

    .expense-card {
        width: 250px;
        height: 135px;
        border-radius: 18px;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0,0,0,0.06);
        border: 1px solid rgba(29,43,54,0.08);
        position: relative;
        cursor: pointer;
        transition: all 0.25s ease;
        padding: 18px 18px 16px 18px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        overflow: hidden;
    }

    /* ✅ Accent strip now uses your theme color */
    .expense-card::before{
        content:"";
        position:absolute;
        left:0;
        top:0;
        height:100%;
        width:4px;
        background: rgba(29, 43, 54, 0.92);
    }

    .expense-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 14px 28px rgba(0,0,0,0.10);
        border-color: rgba(29,43,54,0.28);
    }

    .expense-top {
        display:flex;
        align-items:center;
        gap:12px;
        margin-bottom: 8px;
    }

    /* ✅ icon chip now theme-based */
    .expense-icon-chip {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        display:flex;
        align-items:center;
        justify-content:center;
        background: rgba(29,43,54,0.10);
        color: rgba(29,43,54,0.9);
        flex: 0 0 auto;
    }
    .expense-icon-chip i{
        font-size: 1.35rem;
        margin:0 !important;
        color: rgba(29,43,54,0.92) !important;
    }

    .expense-title {
        font-weight: 700;
        margin: 0;
        font-size: 1.02rem;
        color: rgba(29,43,54,0.95);
        line-height: 1.2;
    }

    .expense-amount {
        font-size: 0.9rem;
        color: rgba(29,43,54,0.70);
        margin-top: 2px;
    }

    /* Eye icon */
    .view-history-eye {
        position: absolute;
        top: 12px;
        right: 12px;
        z-index: 20;
        width: 34px;
        height: 34px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        background: rgba(29, 43, 54, 0.06);
        color: rgba(29, 43, 54, 0.55);
        transition: 0.25s;
    }
    .view-history-eye:hover {
        background: rgba(29,43,54,0.12);
        color: rgba(29,43,54,0.95);
        transform: scale(1.06);
    }
    .view-history-eye i {
        font-size: 1.05rem !important;
        margin: 0 !important;
    }

    /* New category card */
    .expense-card.new-category {
        border: 1.5px dashed rgba(29,43,54,0.22);
        box-shadow: none;
    }
    .expense-card.new-category::before{
        background: rgba(29,43,54,0.55);
    }
    .expense-card.new-category:hover{
        box-shadow: 0 12px 24px rgba(0,0,0,0.08);
        border-color: rgba(29,43,54,0.28);
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .expense-container { justify-content: center; }
        .expense-card { width: 215px; height: 128px; }
    }
    @@media (max-width: 576px) {
        .expense-card { width: calc(50% - 10px); min-width: 150px; height: 120px; }
    }
    @@media (max-width: 360px) {
        .expense-card { width: 100%; height: 115px; }
    }
</style>

<div class="container mt-4">

    <div class="page-header">
        <h2>Your Expenses</h2>
        <p>Track category spending and review your monthly totals.</p>
    </div>

    <div class="mb-5">
        <div class="summary-row">
            <div class="total-summary-card">
                <div class="total-summary-icon"><i class="bi bi-wallet2"></i></div>
                <div>
                    <small style="opacity: 0.6; font-weight: 700;">TOTAL THIS MONTH</small>

                    <!-- ✅ UPDATED: Add commas formatting -->
                    <div class="total-summary-amount">
                        @(ViewBag.Currency ?? "Rs.")
                        @(((decimal?)ViewBag.TotalMonthly ?? 0).ToString("N0"))
                    </div>
                </div>
            </div>

            <!--  Right side button -->
            <button type="button" class="btn-history" onclick="showAllExpenseHistory()">
                <i class="bi bi-plus-lg"></i>
                View Expenses History
            </button>
        </div>
    </div>

    <div class="expense-container">

        <div class="expense-card new-category" onclick="openExpenseModal(null, '')">
            <div class="expense-top">
                <div class="expense-icon-chip">
                    <i class="bi bi-plus-lg"></i>
                </div>
                <div>
                    <div class="expense-title">New Category</div>
                    <div class="expense-amount">Create a custom category</div>
                </div>
            </div>
        </div>

        @if (ViewBag.Categories != null)
        {
            var totals = ViewBag.CategoryTotals as Dictionary<int, decimal> ?? new Dictionary<int, decimal>();

            foreach (var c in ViewBag.Categories)
            {
                decimal amountSpent = totals.ContainsKey(c.Id) ? totals[c.Id] : 0;

                <div class="expense-card" onclick="openExpenseModal(@c.Id, '@c.Name')">

                    <div class="view-history-eye" title="View Details"
                         onclick="event.stopPropagation(); showCategoryHistory(@c.Id, '@c.Name')">
                        <i class="bi bi-eye-fill"></i>
                    </div>

                    <div class="expense-top">
                        <div class="expense-icon-chip">
                            <i class="bi @c.Icon"></i>
                        </div>

                        <div>
                            <div class="expense-title">@c.Name</div>
                            <div class="expense-amount">
                                @(ViewBag.Currency ?? "Rs.") @amountSpent.ToString("N0")
                            </div>
                        </div>
                    </div>

                </div>
            }
        }
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="historySidebar" style="width: 500px; background-color: #f4f7f6; border-left: none;">
    <div class="offcanvas-header text-white" style="background-color: rgb(29, 43, 54);">
        <div allowing="true">
            <h5 class="offcanvas-title mb-0" id="historyTitle">Category History</h5>
            <small style="opacity: 0.7;">Monthly Breakdown</small>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <div id="historyRowsContainer"></div>
    </div>
</div>

<div class="modal fade" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: 20px;">
            <div class="modal-header" style="background-color: rgb(29, 43, 54); color: white;">
                <h5 class="modal-title" id="modalTitle">Record Expense</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4 text-dark">
                <form id="expenseForm" asp-controller="FinanceTracker" method="post">
                    <input type="hidden" name="CategoryId" id="expenseCategoryId" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Category Name</label>
                        <input type="text" class="form-control" id="expenseCategoryDisplay" required />
                    </div>
                    <div id="extendedFields">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Amount</label>
                            <input type="number" name="Amount" step="0.01" class="form-control" id="amtField" placeholder="Enter amount in @(ViewBag.Currency ?? "Rs.")" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Payment Method</label>
                            <select name="PaymentMethod" class="form-select">
                                <option>Cash</option>
                                <option>Card</option>
                                <option>JazzCash</option>
                                <option>Easypaisa</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description (optional)</label>
                            <textarea name="Description" class="form-control" rows="2" placeholder="e.g., Lunch with friends"></textarea>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <input type="date" name="DateSpent" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                    <button type="submit" class="btn w-100 py-2 fw-bold text-white" style="background-color: rgb(29, 43, 54); border-radius: 10px;">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // expense sper category show
    function showCategoryHistory(categoryId, categoryName) {
        document.getElementById('historyTitle').innerText = categoryName + " Expenses";
        document.getElementById('historyRowsContainer').innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary"></div></div>';

        var myOffcanvas = new bootstrap.Offcanvas(document.getElementById('historySidebar'));
        myOffcanvas.show();

        fetch(`/FinanceTracker/GetCategoryDetails?categoryId=${categoryId}`)
            .then(response => response.text())
            .then(html => {
                document.getElementById('historyRowsContainer').innerHTML = html;
            });
    }

    //  All expenses history
    function showAllExpenseHistory() {
        document.getElementById('historyTitle').innerText = "All Expenses History";
        document.getElementById('historyRowsContainer').innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary"></div></div>';

        var myOffcanvas = new bootstrap.Offcanvas(document.getElementById('historySidebar'));
        myOffcanvas.show();

        fetch(`/FinanceTracker/GetExpenseHistoryPartial`)
            .then(response => response.text())
            .then(html => {
                document.getElementById('historyRowsContainer').innerHTML = html;
            })
            .catch(() => {
                document.getElementById('historyRowsContainer').innerHTML =
                    '<div class="alert alert-danger">Failed to load expense history.</div>';
            });
    }
    //new category form

    function openExpenseModal(categoryId, categoryName) {
        const isNew = (categoryId === null || categoryId === undefined);
        const form = document.getElementById('expenseForm');
        const idInput = document.getElementById('expenseCategoryId');
        const displayInput = document.getElementById('expenseCategoryDisplay');
        const extendedFields = document.getElementById('extendedFields');
        const amtField = document.getElementById('amtField');

        if (isNew) {
            form.action = "/FinanceTracker/CreateCategory";
            document.getElementById('modalTitle').innerText = "Add New Category";
            idInput.value = ""; displayInput.value = ""; displayInput.disabled = false;
            extendedFields.style.display = "none"; amtField.required = false;
            ensureHiddenCategoryName();
        } else {
            form.action = "/FinanceTracker/AddExpense";
            document.getElementById('modalTitle').innerText = "Record Expense: " + categoryName;
            idInput.value = categoryId; displayInput.value = categoryName; displayInput.disabled = true;
            extendedFields.style.display = "block"; amtField.required = true;
            removeHiddenCategoryName();
        }
        new bootstrap.Modal(document.getElementById('addExpenseModal')).show();
    }
    //server ko category name bhejne k liye
    function ensureHiddenCategoryName() {
        let hidden = document.getElementById('CategoryNameHidden');
        if (!hidden) {
            hidden = document.createElement('input');
            hidden.type = 'hidden'; hidden.name = 'CategoryName'; hidden.id = 'CategoryNameHidden';
            document.getElementById('expenseForm').appendChild(hidden);
        }
        //category name hta dene k liye expense add krne k form mai
        const displayInput = document.getElementById('expenseCategoryDisplay');
        hidden.value = displayInput.value || '';
        displayInput.oninput = function () { hidden.value = this.value; };
    }

    function removeHiddenCategoryName() {
        const hidden = document.getElementById('CategoryNameHidden');
        if (hidden) hidden.remove();
        document.getElementById('expenseCategoryDisplay').oninput = null;
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
