@{
    ViewData["Title"] = "Add Income";
    Layout=null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>

<style>
body {
    background-color: rgb(29, 43, 54);
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.card-center {
    background-color: #F5F5DC;
    border-radius: 20px;
    padding: 40px 30px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    width: 350px;
    transition: transform 0.3s ease;
}
.card-center:hover {
    transform: translateY(-5px);
}
.card-center h3 {
    color: rgba(29,43,54);
    font-weight: bold;
}
.form-control:focus {
    border-color: rgba(29,43,54);
    box-shadow: 0 0 0 0.2rem rgba(29,43,54,0.25);
}
.btn-primary {
    background-color: rgb(29, 43, 54);
    border-color: rgb(29, 43, 54);
}
.btn-primary:hover {
    background-color: #1f2c3f;
    border-color: #1f2c3f;
}
.btn-primary:active {
    background-color: rgb(44, 122, 145)!important;
    border-color: rgb(50, 70, 90)!important;
    transform: scale(0.98);
}
label {
    color: rgba(29,43,54);
    font-weight: bold;
}
small {
    color: rgba(29,43,54,0.8);
}

/* RESPONSIVE MEDIA QUERIES */
@@media (max-width: 1200px) {
    .card-center {
        padding: 35px 25px;
        width: 340px;
    }
}

@@media (max-width: 992px) {
    .card-center {
        padding: 30px 25px;
        width: 320px;
        border-radius: 18px;
    }
    .card-center h3 {
        font-size: 1.5rem;
    }
    .form-control, .form-select {
        font-size: 0.95rem;
        padding: 0.5rem 0.75rem;
    }
    label.form-label {
        font-size: 0.95rem;
    }
    .btn {
        font-size: 0.95rem;
        padding: 0.5rem;
    }
}

@@media (max-width: 768px) {
    body {
        padding: 20px;
    }
    .card-center {
        padding: 25px 20px;
        width: 100%;
        max-width: 400px;
        border-radius: 16px;
    }
    .card-center h3 {
        font-size: 1.4rem;
    }
    .form-control, .form-select {
        font-size: 0.9rem;
        padding: 0.45rem 0.7rem;
    }
    label.form-label {
        font-size: 0.9rem;
    }
    .btn {
        font-size: 0.9rem;
        padding: 0.45rem;
    }
    .mb-3 {
        margin-bottom: 1rem !important;
    }
    .mt-3 {
        margin-top: 1rem !important;
    }
    .mt-2 {
        margin-top: 0.5rem !important;
    }
}

@@media (max-width: 576px) {
    body {
        padding: 15px;
        align-items: flex-start;
        min-height: 100vh;
        height: auto;
        padding-top: 40px;
        padding-bottom: 40px;
    }
    .card-center {
        padding: 22px 18px;
        border-radius: 14px;
        max-width: 100%;
        width: 100%;
    }
    .card-center h3 {
        font-size: 1.3rem;
        margin-bottom: 1.5rem !important;
    }
    .form-control, .form-select {
        font-size: 0.85rem;
        padding: 0.4rem 0.65rem;
        border-radius: 0.5rem;
    }
    label.form-label {
        font-size: 0.85rem;
        margin-bottom: 0.3rem;
    }
    .btn {
        font-size: 0.85rem;
        padding: 0.4rem;
    }
    .alert.alert-warning {
        font-size: 0.85rem;
        padding: 0.65rem 0.75rem;
        margin-bottom: 1rem !important;
    }
    .mb-3 {
        margin-bottom: 0.8rem !important;
    }
    .mb-4 {
        margin-bottom: 1.2rem !important;
    }
    .mt-3 {
        margin-top: 0.8rem !important;
    }
    .mt-2 {
        margin-top: 0.4rem !important;
    }
}

@@media (max-width: 400px) {
    body {
        padding: 10px;
        padding-top: 30px;
        padding-bottom: 30px;
    }
    .card-center {
        padding: 20px 15px;
        border-radius: 12px;
    }
    .card-center h3 {
        font-size: 1.2rem;
        margin-bottom: 1.2rem !important;
    }
    .form-control, .form-select {
        font-size: 0.8rem;
        padding: 0.35rem 0.6rem;
    }
    label.form-label {
        font-size: 0.8rem;
    }
    .btn {
        font-size: 0.8rem;
        padding: 0.35rem;
    }
    .alert.alert-warning {
        font-size: 0.8rem;
        padding: 0.6rem 0.7rem;
    }
    .card-center:hover {
        transform: translateY(-3px);
    }
    .btn-primary:active {
        transform: scale(0.96);
    }
}

@@media (max-width: 320px) {
    .card-center {
        padding: 18px 12px;
        border-radius: 10px;
    }
    .card-center h3 {
        font-size: 1.1rem;
    }
    .form-control, .form-select {
        font-size: 0.75rem;
        padding: 0.3rem 0.55rem;
    }
    label.form-label {
        font-size: 0.75rem;
    }
    .btn {
        font-size: 0.75rem;
        padding: 0.3rem;
    }
    .alert.alert-warning {
        font-size: 0.75rem;
        padding: 0.5rem 0.6rem;
    }
}

@@media (max-height: 700px) and (max-width: 576px) {
    body {
        align-items: flex-start;
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .card-center {
        margin-top: 20px;
        margin-bottom: 20px;
    }
}

@@media (max-height: 600px) {
    body {
        align-items: flex-start;
        padding-top: 15px;
        padding-bottom: 15px;
    }
    .card-center {
        margin-top: 15px;
        margin-bottom: 15px;
    }
}
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card-center text-center">
        <h3 class="mb-4">Add Income</h3>

        @if(ViewBag.IncomeAlert == true)
        {
            <div class="alert alert-warning text-center">
                ⚠️ Please enter your income for this month!
            </div>
        }

        <form asp-action="AddIncome" asp-controller="FinanceTracker" method="post">
            
            <div class="mb-3 text-start">
                <label for="currency" class="form-label">Currency</label>
                <select class="form-control" id="currency" name="currency" required>
                    <option value="USD">USD - US Dollar ($)</option>
                    <option value="PKR">PKR - Pakistan Rupee (₨)</option>
                    <option value="INR">INR - Indian Rupee (₹)</option>
                    <option value="CNY">CNY - Chinese Yuan (¥)</option>
                    <option value="EUR">EUR - Euro (€)</option>
                    <option value="GBP">GBP - British Pound (£)</option>
                    <option value="JPY">JPY - Japanese Yen (¥)</option>
                    <option value="CAD">CAD - Canadian Dollar (C$)</option>
                    <option value="AUD">AUD - Australian Dollar (A$)</option>
                    <option value="CHF">CHF - Swiss Franc (CHF)</option>
                    <option value="SAR">SAR - Saudi Riyal (﷼)</option>
                    <option value="AED">AED - UAE Dirham (د.إ)</option>
                    <option value="TRY">TRY - Turkish Lira (₺)</option>
                    <option value="KRW">KRW - South Korean Won (₩)</option>
                    <option value="RUB">RUB - Russian Ruble (₽)</option>
                    <option value="BRL">BRL - Brazilian Real (R$)</option>
                    <option value="MXN">MXN - Mexican Peso ($)</option>
                    <option value="SGD">SGD - Singapore Dollar (S$)</option>
                    <option value="HKD">HKD - Hong Kong Dollar (HK$)</option>
                    <option value="MYR">MYR - Malaysian Ringgit (RM)</option>
                    <option value="THB">THB - Thai Baht (฿)</option>
                    <option value="IDR">IDR - Indonesian Rupiah (Rp)</option>
                    <option value="PHP">PHP - Philippine Peso (₱)</option>
                    <option value="EGP">EGP - Egyptian Pound (E£)</option>
                    <option value="BDT">BDT - Bangladeshi Taka (৳)</option>
                    <option value="LKR">LKR - Sri Lankan Rupee (Rs)</option>
                    <option value="NPR">NPR - Nepalese Rupee (रू)</option>
                </select>
            </div>

            <div class="mb-3 text-start">
                <label for="amount" class="form-label">Income Amount</label>
                <input type="number" min="1" class="form-control" id="amount" name="amount" placeholder="Enter amount" required/>
            </div>

            <div class="mb-3 text-start">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required/>
            </div>

            <div class="mb-3 text-start">
                <label for="source" class="form-label">Source</label>
                <select class="form-control" id="source" name="source" required>
                    <option value="">Select Source</option>
                    <option>Salary</option>
                    <option>Freelance</option>
                    <option>Business</option>
                    <option>Gift</option>
                    <option>Investment Profit</option>
                    <option>Bonus</option>
                    <option>Pocket Money</option>
                    <option>Scholarship</option>
                    <option>Other</option>
                </select>
            </div>

            <div class="mb-3 text-start">
                <label for="description" class="form-label">Description (Optional)</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Add details if needed..."/>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Income</button>
        </form>

        <div class="mt-3">
</div>