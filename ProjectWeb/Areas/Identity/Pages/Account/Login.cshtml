@page
@model LoginModel
@{
    ViewData["Title"] = "Login Page";
     Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>

<style>
    body{
        background-color: rgb(29, 43, 54);
        min-height:100vh;
        display:flex;
        justify-content: center;
        align-items:center;
        padding: 20px;
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-card{
        background-color: #F5F5DC;
        border-radius:20px;
        padding:40px 30px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        width:100%;
        max-width: 400px;
    }

    .login-card h3{
        color:rgba(29,43,54);
        font-weight:bold;
    }

    .form-control:focus{
        border-color:rgba(29,43,54);
        box-shadow: 0 0 0 0.2rem rgba(29,43,54,0.25);
    }

    .btn-primary{
        background-color:rgb(29, 43, 54);
        border-color:rgb(29, 43, 54);
    }
    .btn-primary:hover{
        background-color:#1f2c3f;
        border-color:#1f2c3f;
    }

    a{
        color:rgb(29, 43, 54);
        font-weight: 600;
        text-decoration: none;
    }
    a:hover{
        text-decoration: underline;
    }
</style>


<div class="login-card text-center">
    <h3 class="mb-4">TrackIt</h3>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3 text-start">
            <label asp-for="Input.Email" class="form-label fw-bold"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3 text-start">
            <label asp-for="Input.Password" class="form-label fw-bold"></label>
            <input asp-for="Input.Password" class="form-control" placeholder="Enter password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check text-start mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe"></label>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2">Log In</button>
    </form>

    <p class="mt-2"><a asp-page="./ForgotPassword">Forgot your password?</a></p>
    <p class="mt-1">Don't have an account? <a asp-page="./Register">Register</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
