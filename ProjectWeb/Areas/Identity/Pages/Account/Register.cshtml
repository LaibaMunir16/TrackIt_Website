@page
@model ProjectWeb.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Poppins Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>

    <style>
        :root {
            --primary-dark: rgb(29, 43, 54);
            --card-light: #F5F5DC;
            --focus-color: rgba(29, 43, 54, 0.25);
            --error-color: #dc143c;
        }

        /* GLOBAL FONT */
        body, input, button, select, label, a {
            font-family: 'Poppins', sans-serif !important;
        }

        body {
            background-color: var(--primary-dark);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .register-card {
            background-color: var(--card-light);
            border-radius: 12px;
            padding: 35px 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.4);
            transition: transform 0.3s ease;
            max-width: 420px;   /* 🔥 SMALLER SIZE */
            width: 100%;
        }

        .register-card:hover {
            transform: translateY(-4px);
        }

        .register-card h3 {
            color: var(--primary-dark);
            font-weight: 700;
            font-size: 26px;
        }

        .form-label {
            color: var(--primary-dark);
            font-weight: 600 !important;
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 10px 12px;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-dark);
            box-shadow: 0 0 0 0.25rem var(--focus-color);
        }

        .btn-primary {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            padding: 12px;
            font-weight: 600;
            border-radius: 30px;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background-color: #1f2c3f;
            border-color: #1f2c3f;
            transform: translateY(-2px);
        }

        /* FIX SPACING */
        .form-group,
        .row.g-4 {
            margin-bottom: 20px !important;
        }

        #registerSubmit {
            margin-top: 10px;
        }

        /* Underlined but INHERITS TEXT COLOR */
        .login-link {
            text-decoration: underline !important;
            color: inherit !important;   /* 🔥 SAME COLOR AS "Already have an account" */
            font-weight: 600;
        }

        .text-danger {
            color: var(--error-color) !important;
            font-size: 0.9em;
            margin-top: 4px;
            display: block;
        }
    </style>
</head>

<body>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="register-card text-center">
        <h3 class="mb-4">Create Account</h3>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-start" role="alert"></div>

            <div class="col-md-12 text-start form-group">
                <label asp-for="Input.FullName" class="form-label">Full Name:</label>
                <input asp-for="Input.FullName" type="text" class="form-control" placeholder="Enter your full name" required />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="col-md-12 text-start form-group">
                <label asp-for="Input.Email" class="form-label">Email:</label>
                <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" placeholder="Enter email" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="row g-4">
                <div class="col-md-6 text-start">
                    <label asp-for="Input.Password" class="form-label">Password:</label>
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Enter password" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="col-md-6 text-start">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password:</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirm password" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            

            <div class="col-md-12 text-start">
                <button id="registerSubmit" type="submit" class="btn btn-primary w-100">
                    Create Account
                </button>
            </div>

            <p class="mt-4 mb-0">
                Already have an account?
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">
                    Log in here
                </a>
            </p>

        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<partial name="_ValidationScriptsPartial" />

</body>
</html>
